{% from "macros/show_categorical_array.njk" import showCategoricalArray %}

{%- set lazyImage = "data:image/svg+xml,%3Csvg%20xmlns%3D'http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg'%20viewBox%3D'0%200%201%201'%20height%3D'500'%20width%3D'960'%20style%3D'background-color%3Argb(203%2C213%2C224)'%2F%3E" -%}
{% for post in paged.posts %}
    {% if post.data.endbandPresent %}
        {% set endbandStatus = "EndbandPresent" %}
    {% else %}
        {% set endbandStatus = "EndbandAbsent" %}
    {% endif %}

    <div class="postcard">
        <div class="rounded shadow-lg h-full bg-gray-50 hover:shadow-xl">
            <a href="{{ post.url | url }}">
            <img
            class="w-full m-0 rounded-t lazy max-h-72 object-cover object-top card-thumbnail"
            src="{% if post.data.databaseImage %}{{ post.data.databaseImage | url }}{% elif post.data.image %}{{ post.data.image | url }}{% else %}{{ '/assets/img/no-image.svg' | url }}{% endif %}"
            width="960"
            height="500"
            alt="{{ endbandStatus }} {{ post.data.textblockBindingRelationship }}-staggered {{ post.data.keyboard }} with {{ post.data.bindingType | oxfordJoin }} legends">
            </a>
            <div class="px-6 py-5">
                <div class="font-semibold text-lg mb-2">
                    <a class="text-gray-900 hover:text-gray-700" href="{{ post.url | url }}">{{ post.data.title }}</a>
                </div>
                <div class="my-5 flex flex-wrap justify-between">
                    <p id="yearCount-table-cell-{{ post.data.fileSlug }}"   class="text-gray-700 mb-1 max-w-2/5 ">{{ post.data.yearCount }} year</p>
                    <p id="subjects-table-cell-{{ post.data.fileSlug }}"  class="text-gray-700 mb-1 max-w-3/5 break-words text-right">{{ showCategoricalArray(post.data.subjects, "N/A") }}</p>
                    <div class="flexitems-break"></div>
                    <p id="documentCount-table-cell-{{ post.data.documentCount }}" class="text-gray-700 mb-1 max-w-2/5">{{ post.data.documentCount }} documents</p>
                    <p id="bindingType-table-cell-{{ post.data.fileSlug }}"  class="text-gray-700 mb-1 max-w-3/5 break-words text-right">{{ showCategoricalArray(post.data.bindingType, "N/A") }}</p>
                </div>
                {% if post.data.summary -%}
                    {% if post.data.summary | isArray %}
                        <ul class="list-disc">
                        {% for bulletpoint in post.data.summary %}
                            <li>{{ bulletpoint }}</li>
                        {% endfor %}
                        </ul>
                    {% else %}
                        <p>{{ post.data.summary }}<p>
                    {% endif %}
                {%- endif %}
            </div>
        </div>
    </div>
{% endfor %}
